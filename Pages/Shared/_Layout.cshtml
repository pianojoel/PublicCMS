<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Public</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://cdn.tiny.cloud/1/dati1bok39b2ty7rz015r8173gj642okx8s423m4tlilk0ro/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Angkor">
</head>
<body>


    <a class="navbar-brand" style="cursor: pointer;" onclick="clearURL()">Home</a>
    

    <div class="container glass-card">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">

            @RenderBody()

        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row">
                <div class="col-6 text-center">
                    &copy; 2021 - PublicCMS - <a asp-area="" asp-page="/Privacy">Privacy</a><br />
                </div>
                <div class="col-6 text-center">
                    <partial name="_LoginPartial" />
                </div>
            </div>
            
            
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
    function clearURL() {
        window.history.pushState({}, document.title, "/");
        window.location.reload(true);
    }
</script>